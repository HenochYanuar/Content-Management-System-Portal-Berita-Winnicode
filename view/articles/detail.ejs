<div class="card">
  <div class="card-body">
    <div class="container mt-5">
      <!-- Article Header -->
      <div class="text-center mb-4">
        <h2><%= context.article.title %></h2>
        <p class="text-muted">Published on <em><%= context.article.updated_at
            %></em></p>
        <p class="text-muted"> Kategori: <strong><%= context.article.category
            %></strong></p>
      </div>

      <!-- Article Image -->
      <div class="text-center mb-4">
        <img src="<%= context.article.image_url %>" alt="Gambar Artikel"
          class="img-fluid rounded">
      </div>

      <!-- Article Content -->
      <div class="mb-5">
        <p><%- context.article.content %></p>
      </div>

      <!-- Back Button -->
      <div class="text-center">
        <a href="/admin/articles" class="btn btn-secondary"><i
            class="fas fa-chevron-left"></i> Kembali</a>
      </div>
    </div>
  </div>
</div>